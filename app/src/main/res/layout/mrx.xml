<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1100dp"
    android:layout_height="790dp"
    android:layout_alignParentStart="true"
    android:layout_gravity="center"
    android:background="#000000"
    tools:context=".menu">



    <ImageButton
        android:id="@+id/cr"
        android:layout_width="48dp"
        android:layout_height="41dp"
        android:background="@null"
        android:src="@drawable/ic_group_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="790dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="164dp"
            android:layout_height="143dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="340dp"
            android:src="@mipmap/bhu" />
        <ImageView
            android:id="@+id/ui"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_text"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="500dp"
            />
        <TextView
            android:id="@+id/tv"
            android:layout_width="415dp"
            android:layout_height="628dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/paper"
            app:layout_constraintVertical_bias="1.0" />


        <EditText
            android:id="@+id/ed"
            android:layout_width="357dp"
            android:layout_height="203dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="300dp"
            android:background="@null"
            android:fontFamily="@font/bigelow"
            android:textSize="45dp"
            android:gravity="top"
            android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
            android:textCursorDrawable="@drawable/feather" />


        <ImageButton
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="600dp"
            android:background="@drawable/ic_send_button"
            app:layout_constraintVertical_bias="0.873" />

        <ImageView
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:src="@drawable/illustration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.406"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.059" />

        <ImageView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_marginLeft="170dp"
            android:src="@drawable/jk" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>